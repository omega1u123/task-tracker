<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-5" author="omegalul">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="t_comment"/>
            </not>
        </preConditions>

        <createTable tableName="t_comment">

            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="c_task_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="c_board_id"
                             referencedTableName="t_board"
                             referencedColumnNames="id"
                />
            </column>

            <column name="c_username" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="c_text" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="c_board" type="integer">
                <constraints nullable="false"
                             foreignKeyName="c_board_id"
                             referencedTableName="t_board"
                             referencedColumnNames="id"
                />
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>